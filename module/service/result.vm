<html>
<head>
  <title>Search - Result Business Partner</title>
 <link type="text/css" rel="stylesheet" href="../../style.css">
  <script type="text/javascript">
  _editor_url = "../../htmlarea/";
  _editor_lang = "en";
</script>

<script type="text/javascript" src="../../htmlarea/htmlarea.js"></script>
</head>
<body>
<form name="filterservice" method="post" action="search.action">
<table bgcolor="gray" border="0" cellpadding="5" cellspacing="1" width="98%">
   <tr bgcolor="#d0dcff">
      <td colspan="8"><b>Service Search</b></td>
   </tr> 

#if ($services.isEmpty()) 
	<tr bgcolor="yellow">
	<td colspan="4">
	No such data found
	</td>
	</tr>
#else

 	<tr bgcolor="yellow">
	<td colspan="6">
	Found <strong>$!resultRows</strong> #if ($resultRows > 1) Services #else Service #end
    
	#if ($currPage > 0) <a href="search.action?name=$name&address=$address&serialNumber=$serialNumber&currPage=0">&lt;&lt;</a>&nbsp;#end
	#if ($currPage > 0) <a href="search.action?name=$name&address=$address&serialNumber=$serialNumber&currPage=$prevPage">&lt;</a>&nbsp;#end
	[page $page]
	#if ($currPage < $maxPage) <a href="search.action?name=$name&address=$address&serialNumber=$serialNumber&currPage=$nextPage">&gt;</a>&nbsp;#end
	#if ($currPage < $maxPage) <a href="search.action?name=$name&address=$address&serialNumber=$serialNumber&currPage=$maxPage">&gt;&gt;</a>&nbsp;#end
	</td>
	</tr>
#end

<tr bgcolor="#e4e4e4" width="98%">
		<td><b>Name</b></td>
		<td><b>Address</b></td>
		<td><b>S/N</b></td>
</tr>

#foreach ($service in $services)

<tr bgcolor="#ffffff" width="98%">
	<td><strong><a href="edit.action?id=$service.id">$!service.name</a></strong>&nbsp;</td>
	<td>$!service.address</td>
	<td>$!service.serialNumber</td>
</tr>
#end

</table>

</body>
</html>

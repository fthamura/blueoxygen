<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <title>edit - View Business Partner</title>
 <link type="text/css" rel="stylesheet" href="../../style.css">
  <script type="text/javascript">
  _editor_url = "../../htmlarea/";
  _editor_lang = "en";
</script>

<script type="text/javascript" src="../../htmlarea/htmlarea.js"></script>
</head>
<body>


<table bgcolor="gray" border="0" cellpadding="5" cellspacing="1" width="90%">

<tr bgcolor="#d0dcff">
	<td colspan=4 id="tableHeader1" width="442">Opportunity Detail</td>
</tr>
<tr bgcolor="#ffffff">
	  <td id="tableHeader2" colspan="4"><b><a href="edit.action?id=$opportunity.Id">[Edit]</a><a href="confirmDelete.action?id=$opportunity.Id">[Delete]</a></b></td>
	
</tr>

<tr bgcolor="#ffffff">
	<td width="120">Opportunity Name :</td>
	<td width="170">$!opportunity.name</td>
	<td colspan="2"></td>
</tr>
<tr bgcolor="#ffffff">
	<td width="120">Business Partner : </td>
	<td width="170"><b><a href="../business_partner/view.action?id=$opportunity.businessPartner.Id">$!opportunity.businessPartner.name</a></b></td>
	<td colspan="2"></td>
</tr>
<tr bgcolor="#ffffff">
	<td width="120">Amount		 :</td>
	<td width="170">$!opportunity.amount</td>
	<td width="200">Expected Close Date :</td>
	<td width="210">$!opportunity.expectedCloseDate</td>
</tr>
<tr bgcolor="#ffffff">
	<td width="120">Next Step			 :</td>
	<td width="170">$!opportunity.nextStep</td>
	<td width="200">Probability(%) :</td>
	<td width="210">$!opportunity.probability</td>
</tr>
<tr bgcolor="#ffffff">
	<td width="120">Type			 :</td>
	<td width="170">$!opportunity.type</td>
	<td width="200">Sales Stage :</td>
	<td width="210">$!opportunity.salesStage</td>
</tr>
<tr bgcolor="#ffffff">
	<td width="120">Description			 :</td>
	<td width="170">$!opportunity.description</td>
	<td colspan="2"></td>
</tr>



</table>
<table bgcolor="gray" border="0" cellpadding="5" cellspacing="1" width="90%">
<tr bgcolor="#d0dcff">
	<td colspan=4 id="tableHeader1" width="442">Products List</td>
</tr>
<tr id="tableHeader1" bgcolor="#d0dcff">
		<td>Product Name</td>
		<td>Price</td>
		<td>Unit</td>
		<td>Total Price</td>
</tr>
#foreach ($opportunityProduct in $opportunity.opportunityProduct)

<tr valign="top" bgcolor="#ffffff">
	<td><strong><a href="../products/view.action?id=$opportunityProduct.productId">$!opportunityProduct.name</a></strong>&nbsp;</td>
	<td>$!opportunityProduct.viewPrice()</td>
	<td>$!opportunityProduct.unit</td>
 	<td>$!opportunityProduct.viewSale()</td>
</tr>
#end
<tr bgcolor="#d0dcff">
	<td>Total sales</td>
	<td></td>
	<td></td>
	<td>$!total</td>
</tr>

</table>
</body>
</html>
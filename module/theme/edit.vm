<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<title>Workspace Management - Edit Theme</title>
  <link type="text/css" rel="stylesheet" href="../../style.css">
  <script type="text/javascript">
  _editor_url = "../../htmlarea/";
  _editor_lang = "en";
</script>

<script type="text/javascript" src="../../htmlarea/htmlarea.js"></script>
</head>
<body onload="HTMLArea.replaceAll();">
#if (!$actionErrors.isEmpty())
<div class="errorMessage">Errors</div>
<ul class="errorMessage">
#foreach( $error in $actionErrors ) <li>$error</li>
#end
</ul>
#end

<form method="post" action="update.action">
<table bgcolor="gray" border="0" cellpadding="5" cellspacing="1" width="98%">
  <tr bgcolor="#d0dcff">
        <td colspan="3"><b>Edit Theme</b></td>
  </tr>
  <tr bgcolor="#ffffff">
    <td style="font-weight: bold;" align="right" width="25%">Nama:</td>
    <td><input size="35" maxlenght="25" type="text" name="name" value="$!name" >
  </tr>
  <tr bgcolor="#ffffff">
        <td style="font-weight: bold;" align="right" valign="top">Description:</td>
        <td>
        <textarea id="description" name="description" style="width: 100%" rows="15" cols="80">$!description</textarea>
        </td>
  </tr>
  <tr bgcolor="#ffffff">
    <td style="font-weight: bold;" align="right" width="25%">Theme Folder:</td>
    <td><input size="35" type="text" name="theme_folder" value="$!theme_folder" >
  </tr>  
  <tr bgcolor="#ffffff">
  	<td style="font-weight: bold;" align="right" valign="top">Active:</td>
  	<td><input type="radio" name="activeFlag" value=1 #if ($activeFlag == 1) checked #end> Yes<br><input type="radio" name="activeFlag" value=0 #if ($activeFlag == 0) checked #end> No
  	</td>
  </tr>
  <tr bgcolor="#d0dcff">
  	<td colspan="2"><input type="submit" value="Update"><input type="reset" value="Reset"><input type="hidden" name="id" value="$id">
</td>
  	</td>
  </tr>
</table>



</form>

<p>&nbsp;</p>
</body>
</html>

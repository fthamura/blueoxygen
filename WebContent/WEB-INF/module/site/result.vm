<html>
<head>
<title>Workspace Management - Search Site Result</title>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
<meta name="GENERATOR" content="Quanta Plus">
	<link type="text/css" rel="stylesheet" href="../../style.css">
</head>
<body>
<table bgcolor="gray" border="0" cellpadding="5" cellspacing="1" width="98%">
      <tr bgcolor="#d0dcff">
        <td colspan="5"><b>Search Site</b></td>
      </tr>
	    
#if ($sites.isEmpty()) 
		<tr bgcolor="yellow">
        	<td colspan="5" align="right">No such data found</td>
      	</tr>
#else
<tr bgcolor="yellow">
        	<td colspan="5" align="right">
        	Found ( <strong>$!resultRows</strong> ) #if ($resultRows > 1) sites #else site
        	</td>
      	</tr>
#end
<tr bgcolor="#e4e4e4" width="98%">
	<td>Name</td>
	<td>Description</td>
	<td>Tilte</td>
	<td>URL Branding</td>
	<td>&nbsp;</td>
</tr>

#foreach ($site in $sites)
<tr bgcolor="#ffffff" valign="top">
	<td><a href="edit.action?id=$site.Id" name="Edit">$!site.Name</a></td>
	<td><a href="edit.action?id=$site.Id" name="Edit">$!site.Description</a></td>
	<td><a href="edit.action?id=$site.Id" name="Edit">$!site.Title</a></td>
	<td><a href="edit.action?id=$site.Id" name="Edit">$!site.Url_branding</a></td>
	<td><a href="edit.action?id=$site.Id" name="Edit">edit</a>&nbsp;
	<a href="confirmDelete.action?id=$site.Id" name="Delete">del</a></td>	
</tr>

#end
	<tr bgcolor="#e4e4e4">
		<td align="right" colspan="5">
			#if ($currPage > 0) <a href="search.action?name=$name&description=$description&title=$title&Url_branding=$Url_branding&currPage=0">&lt;&lt;</a>&nbsp;#end
			#if ($currPage > 0) <a href="search.action?name=$name&description=$description&title=$title&Url_branding=$Url_branding&currPage=$prevPage">&lt;</a>&nbsp;#end
			[page $page]
			#if ($currPage < $maxPage) <a href="search.action?name=$name&description=$description&title=$title&Url_branding=$Url_branding&currPage=$nextPage">&gt;</a>&nbsp;#end
			#if ($currPage < $maxPage) <a href="search.action?name=$name&description=$description&title=$title&Url_branding=$Url_branding&currPage=$maxPage">&gt;&gt;</a>&nbsp;#end
		</td>
     </tr>
</table>
#end

</body>
</html>

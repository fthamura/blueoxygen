<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<!--<%@ taglib uri = "webwork" prefix = "ww" %>-->
<html>
	<head>
		<title>Form - Field</title>
		<link rel="stylesheet" type="text/css" href="../../style.css">
	</head>
	<body>
		#if (!$actionErrors.isEmpty())
			<div class="errorMessage">Errors</div>
			<ul class="errorMessage">
			#foreach( $error in $actionErrors )
				<li>$error</li>
			#end
			</ul>
		#end
		
		<form method="get" action="add.action">
			<table border="0" cellpadding="5" cellspacing="1" width="98%" bgcolor="#000000">
				<tr bgcolor="#d0dcff">
					<td colspan="2"><b>Field</b></td>
				</tr>
				<tr bgcolor="#ffff00">
					<td colspan="2">&nbsp;</td>
				</tr>
				<tr bgcolor="#ffffff">
					<td>Name : <font color="red">*</font></td>
					<td>
						<input name="field.name" value="$!field.name"/>
					</td>
				</tr>
				<tr bgcolor="#ffffff">
					<td>Description :</td>
					<td>
						<input name="field.description" value="$!field.description"/>
					</td>
				</tr>
				<tr bgcolor="#ffffff">
  					<td>Tab Name</td>
  					<td><input type="textfield" id="tabDescription" value="$!tab.description" size="35" disabled="true" onfocus="this.blur()"/>
    					<input type="hidden" id="tabId" name="tabId" value="$!tab.id"/>
    					&nbsp;&nbsp;<input type="button" value="Change" onclick="javascript:window.open('../tab/list.action','cats','scrollbars=yes,status=no,width=300,height=300')"/>
    					&nbsp;&nbsp;&nbsp;<a href="../tab/edit.action?id=$tab.Id">edit</a>
  					</td>
				</tr>
				<tr bgcolor="#ffffff">
  					<td>Column Name</td>
  					<td><input type="textfield" id="columnDescription" value="$!column.description" size="35" disabled="true" onfocus="this.blur()"/>
    					<input type="hidden" id="columnId" name="columnId" value="$!column.id"/>
    					&nbsp;&nbsp;<input type="button" value="Change" onclick="javascript:window.open('../column/list.action','cats','scrollbars=yes,status=no,width=300,height=300')"/>
    					&nbsp;&nbsp;&nbsp;<a href="../column/edit.action?id=$tab.Id">edit</a>
  					</td>
				</tr>
				<tr bgcolor="#e4e4e4">
					<td colspan="2">
						<input type="submit" value="Submit"/>
						<input name="id" type="hidden" value="$!field.id"/>
					</td>
				</tr>
				<!--tr bgcolor="#ffffff">
					<td colspan="2"><a href="../../thin/form.action">Home</a></td>
				</tr-->
			</table>
		</form>
	</body>
</html>
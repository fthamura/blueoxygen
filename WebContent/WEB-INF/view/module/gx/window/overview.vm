<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<!--<%@ taglib uri = "webwork" prefix = "ww" %>-->
<html>
	<head>
		<title>Gx - $!window.description</title>
		<link rel="stylesheet" type="text/css" href="../../style.css">
	    <style type="text/css">
<!--
.style1 {
	color: #FFFFFF;
	font-weight: bold;
}
-->
</style>
	</head>
	<body>
		GX > Window <br><br>
		$!window.name<br>
		$!window.description<br>
        <br>
		<table align="center" bgcolor="gray" border="0" cellpadding="5" cellspacing="1" width="98%">
  			<tbody>
  				<tr bgcolor="#333366">
					<td colspan="2" bgcolor="#333366">
						<span class="style1">Tab</span>
					</td>
				</tr>
				#foreach($t in $window.tabs)
				<tr bgcolor="#ffffff">
					<td rowspan="2" valign="top">
						$!velocityCount 
						<div style="text-align: right;">
							<a href="edit.action?window.id=$!window.id&tab.id=$!t.id">
								<img src="../../images/silk/page_edit.png" alt="Edit Tab Record" border="0">
							</a>
						</div>
					</td>
					<td>
						$!t.name<br>
						$!t.description</br>
					</td>
				</tr>
				<tr bgcolor="#ffffff">
					<td>
						<table align="center" bgcolor="gray" border="0" cellpadding="5" cellspacing="1" width="100%">
				  			<tbody>
				  				<tr>
									<td colspan="3" bgcolor="#333366"><span class="style1">Field</span></td>
								</tr>
								#foreach($f in $t.fields)
								<tr bgcolor="#ffffff">
									<td>$!velocityCount</td>
									<td>$f.name</td>
									<td>$f.description</td>
								</tr>
								#end
							</tbody>
						</table>
					</td>
				</tr>
				#end
			</tbody>
		</table>
	</body>
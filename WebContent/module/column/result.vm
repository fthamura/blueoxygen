<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<!--<%@ taglib uri = "webwork" prefix = "ww" %>-->
<html>
	<head>
		<title>Search Result - Column</title>
		<link rel="stylesheet" type="text/css" href="../../style.css">
	</head>
	<body>
		<table bgcolor="gray" border="0" cellpadding="5" cellspacing="1" width="98%">
			<tr bgcolor="#d0dcff">
				<td colspan="5"><b>Search Column</b></td>
			</tr>
			#if ($columns.isEmpty()) 
			<tr bgcolor="yellow">
				<td colspan="5" align="right">No such data found</td>
			</tr>
			#else 
			<tr bgcolor="yellow">
				<td colspan="5" align="right">
					Found ( <strong>$!resultRows</strong> ) #if ($resultRows > 1) Modules #else Module #end
				</td>
			</tr>
			
			<tr bgcolor="#e4e4e4" width="98%">
				<td>Create Date</td>
				<td>Name</td>
				<td>Description</td>
				<td>Table id</td>
				<td>Action</td>
			</tr>
			#foreach ($de in $columns)
			<tr valign="top" bgcolor="white">
				<td>$!de.logInformation.createDate</td>
				<td>$!de.name</td>
				<td>$!de.description</td>
				<td>$!de.table_id</td>
				<td>
					<a href="edit.action?id=$de.Id">Edit</a>
					<a href="confirm.action?id=$de.Id">Delete</a>
				</td>
			</tr>
			#end
			<tr bgcolor="#e4e4e4">
				<td align="right" colspan="5">
					#if ($currPage > 0) <a href="search.action?column.name=$!column.name&column.description=$!column.description&column.table_id=$!column.table_id&orderBy=$!orderBy&currPage=0">&lt;&lt;</a>&nbsp;#end
					#if ($currPage > 0) <a href="search.action?column.name=$!column.name&column.description=$!column.description&column.table_id=$!column.table_id&orderBy=$!orderBy&currPage=$prevPage">&lt;</a>&nbsp;#end
					[page $page]
					#if ($currPage < $maxPage) <a href="search.action?column.name=$!column.name&column.description=$!column.description&column.table_id=$!column.table_id&orderBy=$!orderBy&currPage=$nextPage">&gt;</a>&nbsp;#end
					#if ($currPage < $maxPage) <a href="search.action?column.name=$!column.name&column.description=$!column.description&column.table_id=$!column.table_id&orderBy=$!orderBy&currPage=$maxPage">&gt;&gt;</a>&nbsp;#end
				</td>
			</tr>
			#end
			<!--tr bgcolor="#ffffff">
				<td colspan="6"><a href="../../thin/form.action">Home</a></td>
			</tr-->
		</table>
	</body>
</html>
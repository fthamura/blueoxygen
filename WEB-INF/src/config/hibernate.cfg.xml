<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">


<hibernate-configuration>

    <session-factory name="Cimande">

        <!-- properties -->
        <property name="hibernate.cglib.use_reflection_optimizer">true</property>
        <property name="hibernate.query.imports">org.blueoxygen.cimande.security</property>
        <property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/cimande-1</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">tulalit</property>
        <property name="hibernate.connection.pool_size">5</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.cache.use_query_cache">true</property>
        <property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
        
        <!-- mapping files -->
        <mapping resource="org/blueoxygen/cimande/security/User.hbm.xml"/>
        <mapping resource="org/blueoxygen/cimande/role/Role.hbm.xml"/>
        <mapping resource="org/blueoxygen/cimande/role/RolePrivilage.hbm.xml"/>
        <mapping resource="org/blueoxygen/cimande/site/Site.hbm.xml"/>
        <mapping resource="org/blueoxygen/cimande/descriptors/Collection.hbm.xml"/>
        <mapping resource="org/blueoxygen/cimande/descriptors/Descriptor.hbm.xml"/>
        <mapping resource="org/blueoxygen/cimande/descriptors/DescriptorGroup.hbm.xml"/>
        <mapping resource="org/blueoxygen/cimande/descriptors/Wizard.hbm.xml"/>
        
       	<mapping resource="org/blueoxygen/cimande/modulefunction/ModuleFunction.hbm.xml"/>	
    	<mapping resource="org/blueoxygen/cimande/category/Category.hbm.xml"/>	
    	<mapping resource="org/blueoxygen/cimande/section/Section.hbm.xml"/>	
    	<mapping resource="org/blueoxygen/cimande/jobdescription/JobDesc.hbm.xml"/>	

		<mapping resource="org/blueoxygen/cimande/company/Company.hbm.xml"/>
		<mapping resource="org/blueoxygen/cimande/skin/Skin.hbm.xml"/>
   	
		<mapping resource="org/blueoxygen/cimande/theme/Theme.hbm.xml"/>	
		<mapping resource="org/blueoxygen/cimande/template/TemplateObject.hbm.xml"/>	
		<mapping resource="org/blueoxygen/cimande/template/TemplateObjectDetail.hbm.xml"/>	
     	<mapping resource="org/blueoxygen/cimande/template/Template.hbm.xml"/>
     	
     	<mapping resource="org/blueoxygen/cimande/registration/JUGMember.hbm.xml"/>
    
	</session-factory>

</hibernate-configuration>

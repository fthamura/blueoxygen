<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.blueoxygen.cimande.role.UserRole"
        table="user_role"
    >

        <id
            name="id"
            column="id"
            type="java.lang.String"
            length="28"
            unsaved-value="0"
        >
            <generator class="uuid.hex">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-UserRole.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="defaultRole"
            type="yes_no"
            update="true"
            insert="true"
            column="defaultRole"
        />

        <many-to-one
            name="role"
            class="org.blueoxygen.cimande.role.Role"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="role_id"
        />

        <many-to-one
            name="user"
            class="org.blueoxygen.cimande.security.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="user_id"
        />

        <component
            name="logInformation"
            class="org.blueoxygen.cimande.LogInformation"
        >
        <property
            name="createBy"
            type="java.lang.String"
            update="true"
            insert="true"
            column="create_by"
            length="28"
        />

        <property
            name="lastUpdateBy"
            type="java.lang.String"
            update="true"
            insert="true"
            column="update_by"
            length="28"
        />

        <property
            name="createDate"
            type="java.sql.Timestamp"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="lastUpdateDate"
            type="java.sql.Timestamp"
            update="true"
            insert="true"
            column="update_date"
        />

        <property
            name="activeFlag"
            type="int"
            update="true"
            insert="true"
            column="active_flag"
        />

        </component>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-UserRole.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>

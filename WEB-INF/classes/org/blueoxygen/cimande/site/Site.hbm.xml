<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.blueoxygen.cimande.site.Site"
        table="site"
    >

        <id
            name="id"
            column="id"
            type="java.lang.String"
            length="28"
            unsaved-value="0"
        >
            <generator class="uuid.hex">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Site.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <many-to-one
            name="theme"
            class="org.blueoxygen.cimande.theme.Theme"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="theme_id"
        />

        <property
            name="admin_email"
            type="java.lang.String"
            update="true"
            insert="true"
            column="admin_email"
        />

        <property
            name="notify_email"
            type="java.lang.String"
            update="true"
            insert="true"
            column="notify_email"
        />

        <property
            name="notify_flag"
            type="int"
            update="true"
            insert="true"
            column="notify_flag"
        />

        <property
            name="notify_from"
            type="java.lang.String"
            update="true"
            insert="true"
            column="notify_from"
        />

        <property
            name="notify_message"
            type="java.lang.String"
            update="true"
            insert="true"
            column="notify_message"
        />

        <property
            name="site_headline"
            type="java.lang.String"
            update="true"
            insert="true"
            column="site_headline"
        />

        <property
            name="site_url"
            type="java.lang.String"
            update="true"
            insert="true"
            column="site_url"
        />

        <property
            name="url_branding"
            type="java.lang.String"
            update="true"
            insert="true"
            column="url_branding"
        />

        <component
            name="logInformation"
            class="org.blueoxygen.cimande.LogInformation"
        >
        <property
            name="createBy"
            type="java.lang.String"
            update="true"
            insert="true"
            column="create_by"
            length="28"
        />

        <property
            name="lastUpdateBy"
            type="java.lang.String"
            update="true"
            insert="true"
            column="update_by"
            length="28"
        />

        <property
            name="createDate"
            type="java.sql.Timestamp"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="lastUpdateDate"
            type="java.sql.Timestamp"
            update="true"
            insert="true"
            column="update_date"
        />

        <property
            name="activeFlag"
            type="int"
            update="true"
            insert="true"
            column="active_flag"
        />

        </component>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Site.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>

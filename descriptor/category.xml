<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>
<!--
CREATE TABLE category(
	id 		INT(11) AUTO_INCREMENT PRIMARY KEY,
	create_by		VARCHAR(15),
	create_date 	TIMESTAMP,
	update_by  	VARCHAR(15),
	update_date	TIMESTAMP,

	code		VARCHAR(2) UNIQUE NOT NULL,
	descriptor_id	INT(11),
	description	VARCHAR(125),
	iparentcode	VARCHAR(2), 
	active_flag	BOOL	DEFAULT '1'	
);
-->
<contentmanager name="category" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Descriptor" name="descriptor_id" type="list" search="yes" edit="yes" help="put help here" references="yes" >
		<builder datatype="varchar" datasize="28"/>
		<references table="descriptor" key="id" value="description" orderby="name" viewall="yes" where="reference.name&lt;&gt;'template'"/>
	</descriptor>

	<descriptor title="Code" required="yes" name="code" type="text" size="3" maxlength="3" help="Make it unique!" search="yes" edit="yes">
		<builder datatype="varchar" datasize="3" unique="yes"/>
	</descriptor>

	<descriptor title="Parent Code" name="iparentcode" type="text" size="28" maxlength="28" help="Make it unique!" search="yes" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="28"/>
	</descriptor>

	<descriptor title="Category Image" name="url_category_image" maxlength="255" type="file" size="35" search="yes" edit="yes" help="Your content descriptor file">
		<builder datatype="VARCHAR" datasize="255"/>
	</descriptor>
	
	<descriptor title="Description: " required="yes" search="yes" edit="yes" name="description" type="text" size="25" maxlength="125" >
		<builder datatype="varchar" datasize="125"/>
	</descriptor>

	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="put help here">
		<builder datatype="bool" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
	
</contentmanager>

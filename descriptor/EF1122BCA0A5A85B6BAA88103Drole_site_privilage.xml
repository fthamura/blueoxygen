<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>
<!--
CREATE TABLE role_previlage(
	id 			INT(11) AUTO_INCREMENT PRIMARY KEY,

	role_id 		INT(11),
	module_function_id	INT(11),
	previlage_flag		BOOL DEFAULT 0,
	url_xml			VARCHAR(255),

	create_by		VARCHAR(15),
	create_date 		TIMESTAMP,
	update_by  		VARCHAR(15),
	update_date		TIMESTAMP
);
-->
<contentmanager name="role_site_privilage" method="post" action="../utility/crvd-engine.jsp">
	<descriptor title="Role Site ID" name="role_site_id" type="text" required="yes" size="28" maxlength="28" search="yes" edit="yes">
		<builder datatype="VARCHAR" datasize="28"/>
	</descriptor>

	<descriptor title="RoleSite Site ID" name="rs_site_id" type="text" required="yes" size="28" maxlength="28" search="yes" edit="yes">
		<builder datatype="VARCHAR" datasize="28"/>
	</descriptor>

	<descriptor title="Module_Function ID" name="module_function_id" type="text" required="yes" size="28" maxlength="28" search="yes" edit="yes">
		<builder datatype="VARCHAR" datasize="28"/>
	</descriptor>

	<descriptor title="Active Flag" name="privilage_flag" type="radio" value="1" search="yes" edit="yes">
		<builder datatype="BOOL" />
		<choice title="Yes" name="privilage_flag" value="1"/>
		<choice title="No" name="privilage_flag" value="0"/>
	</descriptor>
	<descriptor title="URL XML" name="url_xml" type="text" required="yes" size="128" maxlength="128" search="yes" edit="yes">
		<builder datatype="VARCHAR" datasize="128"/>
	</descriptor>
	
</contentmanager>

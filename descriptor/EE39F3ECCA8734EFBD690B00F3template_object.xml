<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="template_object" method="post" action="../utility/crvd-engine.jsp">
	<descriptor title="Theme" name="theme_id" type="list" search="yes" edit="yes" help="Select your theme!!" references="yes" comment="Assign theme with content object">
		<builder datatype="varchar" datasize="28"/>
		<references table="theme" key="id" value="description" orderby="description" viewall="yes"/>
	</descriptor>
	<descriptor title="Template Skin" name="template_skin" maxlength="25" type="text" size="25" required="yes" search="yes" edit="yes">
		<builder datatype="varchar" datasize="25" />
	</descriptor>

	<descriptor title="Description" name="description" maxlength="255" type="text" size="25" search="yes" edit="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>


</contentmanager>

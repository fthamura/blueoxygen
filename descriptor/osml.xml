<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="osml" method="post" action="../utility/crvd-engine.jsp">
	<descriptor title="Name" required="yes" name="name" type="text" size="25" maxlength="128" help="Descriptor name must be same with your database's table name (and lower case)!" search="yes" edit="yes">
		<builder datatype="VARCHAR" datasize="128"/>
	</descriptor>
	
	<descriptor title="Description" name="description" required="yes" type="text" size="35" maxlength="255" search="yes" edit="yes">
		<builder datatype="VARCHAR" datasize="255"/>
	</descriptor>
	
	<descriptor title="OSML" name="url_osml" maxlength="255" type="file" size="35" search="yes" edit="yes" help="Assign an OSML to this site">
		<builder datatype="VARCHAR" datasize="255"/>
	</descriptor>
	
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes">
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>

</contentmanager>

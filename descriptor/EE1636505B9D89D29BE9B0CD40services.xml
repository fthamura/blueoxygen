<?xml version="1.0"?>

<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="services" method="post" action="../utility/crvd-engine.jsp">

	<descriptor title="name" search="yes" required="yes" edit="yes" name="name" type="text" size="30">
		<builder datatype="varchar" datasize="30"/>
	</descriptor>
	
	<descriptor title="Headline" name="headline" maxlength="255" type="text" size="35" required="yes" search="yes" edit="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>

	<descriptor title="Cross Selling Headline" name="cross_selling_headline" type="text" size="35" maxlength="255" search="yes" edit="yes">
		<builder datatype="text"/>
	</descriptor>

	<descriptor title="Abstract" name="abstract" type="textarea" cols="45" rows="5" search="no" edit="yes">
		<builder datatype="text"/>
	</descriptor>

	<descriptor title="Detail" name="detail" type="textarea" cols="45" rows="5" search="no" edit="yes">
		<builder datatype="text"/>
	</descriptor>

        <descriptor title="Image1" name="url_image1" maxlength="255" type="file" default="/images" size="35" search="no" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
        
        <descriptor title="Image2" name="url_image2" maxlength="255" type="file" default="/images" size="35" search="no" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>

        <descriptor title="Image3" name="url_image3" maxlength="255" type="file" default="/images" size="35" search="no" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
			
</contentmanager>

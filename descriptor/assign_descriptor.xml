<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="assign_descriptor" method="post" action="../utility/crvd-engine.jsp">
<!--
	This XML is designed to assign a descriptor to a workflow.
	If in workflow_table, you cannot not find a descriptor, means that descriptor is not workflow-enabled.
	So, in edit site, the hyperlink View Workflow status will be disable :)	
	
-->
	<information>
		<statusset title="Notes" param="Assign Descriptor to Workflow" />
	</information>	
	<descriptor title="Descriptor" name="descriptor_id" type="menu" search="yes" edit="yes" help="put help here" references="yes" >
		<builder datatype="VARCHAR" datasize="28"/>
		<references table="descriptor" key="id" value="description" orderby="description" viewall="yes" />
	</descriptor>
	
	<descriptor title="Organization Structure" name="osml_id" type="menu" search="yes" edit="yes" help="Organization Structure" references="yes" >
		<builder datatype="VARCHAR" datasize="28"/>
		<references table="osml" key="id" value="name" orderby="name" viewall="yes" />
	</descriptor>
	
	<descriptor title="Description" name="description" type="text" size="35" maxlength="255" search="yes" edit="yes">
		<builder datatype="VARCHAR" datasize="255"/>
	</descriptor>

	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes">
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>

</contentmanager>

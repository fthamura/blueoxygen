<?xml version="1.0"?>

<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="shipment_method" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Shipment Method Name" search="yes" required="yes" edit="yes" name="smethod_name" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>
	
	<descriptor title="Shipment Method Desc" search="yes" required="yes" edit="yes" name="smethod_desc" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>
	
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" >
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
		
</contentmanager>

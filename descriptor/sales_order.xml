<?xml version="1.0"?>

<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="sales_order" method="post" action="../utility/crvd-engine.jsp">
	
<!-- add field order_number, order_date, and member_id manually in database -->
	<descriptor title="Order number" search="yes" required="yes" edit="yes" name="order_number" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>
	
	<descriptor title="Order date" search="yes" required="yes" edit="yes" name="order_date" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>
	
	<descriptor title="Member Id" search="yes" required="yes" edit="yes" name="member_id" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>
	
	<descriptor title="Send address" search="yes" required="yes" edit="yes" name="send_address" type="text" size="30">
		<builder datatype="varchar" datasize="30"/>
	</descriptor>
	
	<descriptor title="Send city" search="yes" required="yes" edit="yes" name="send_city" type="text" size="20">
		<builder datatype="varchar" datasize="20"/>
	</descriptor>
	
	<descriptor title="Send zip code" search="yes" required="yes" edit="yes" name="send_zip_code" type="text" size="5">
		<builder datatype="varchar" datasize="5"/>
	</descriptor>

	<descriptor title="Send phone" search="yes" required="yes" edit="yes" name="send_phone" type="text" size="10">
		<builder datatype="varchar" datasize="10"/>
	</descriptor>

	<descriptor title="Payment Id" search="yes" required="yes" edit="yes" name="payment_id" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>

	<descriptor title="Approved date" search="yes" required="yes" edit="yes" name="approved_date" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>

	<descriptor title="Approved by" search="yes" required="yes" edit="yes" name="approved_by" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>

	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" >
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
		
</contentmanager>

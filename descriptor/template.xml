<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>
<!--
CREATE TABLE template(
	id 		INT(11) AUTO_INCREMENT PRIMARY KEY,
	descriptor_id	INT(11),
	
	name		VARCHAR(125)  NOT NULL,
	description	VARCHAR(255),
	
	url_xsl_template 	VARCHAR(255),
	active_flag	BOOL	DEFAULT '0'
			
	Notes:
	view all template data descriptor except template, that is because template is a descriptor
);
-->
<contentmanager name="template" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Descriptor" name="descriptor_id" type="list" search="yes" edit="yes" help="put help here" references="yes" >
		<references table="descriptor" key="id" value="name" orderby="name" viewall="yes" where="reference.name&lt;&gt;'template'"/>
	</descriptor>
	
	<descriptor title="Name" required="yes" name="name" type="text" size="25" maxlength="50" help="Make role's name unique!" search="yes" edit="yes">
		<builder datatype="varchar" datasize="25" criteria="not null" default="test" unique="yes"/>
	</descriptor>
	
	<descriptor title="Description" name="description" type="text" size="35" maxlength="125" search="yes" edit="yes">
		<builder datatype="varchar" datasize="25" criteria="not null" default="test" unique="yes"/>
	</descriptor>
	
	<descriptor title="XSL Template" name="url_xsl_template" maxlength="255" type="file" size="35" search="yes" edit="yes" help="No more than 1 MB XSL file, or ask administrator to upload using FTP!">
		<builder datatype="varchar" />
	</descriptor>
	
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="put help here">
		<builder datatype="varchar" datasize="25" criteria="not null" default="test" unique="yes"/>
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
	
</contentmanager>

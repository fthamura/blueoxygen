<?xml version="1.0"?>

<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="product" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Product Code1" search="yes" required="yes" edit="yes" name="pcode1" type="text" size="2" >
		<builder datatype="varchar" datasize="2"/>
	</descriptor>
	
	<descriptor title="Product Code2" search="yes" required="yes" edit="yes" name="pcode2" type="text" size="3">
		<builder datatype="varchar" datasize="3"/>
	</descriptor>
	
	<descriptor title="Category ID" search="yes" edit="yes" name="pcategory_id" type="text" size="28" getid="yes" >
		<builder datatype="varchar" datasize="28"/>
	</descriptor>
	
	<descriptor title="Name" search="yes" required="yes" edit="yes" name="product_name" type="text" size="30">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
	
	<descriptor title="Description" search="yes" edit="yes" name="product_desc" type="textarea" cols="25" rows="5" >
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
	
	<descriptor title="Primary Unit of Measure" name="pri_uom_code" required="yes" search="yes" edit="yes" type="list" >
		<builder datatype="varchar" datasize="28"/>
		<references table="mtl_unit_of_measure" key="uom_code" value="unit_of_measure" orderby="uom_code" viewall="yes"/>
	</descriptor>

<!-- di database , field conv_type, typenya diganti varchar, dengan default value : standard  -->
	<descriptor title="UoM Conversion Type" search="yes" edit="yes" name="conv_type" type="radio" position="multiline" value="standard" required="yes" >
		<builder datatype="BOOL" />
		<choice title="Standard" name="conv_type" value="standard"/>
		<choice title="Both" name="conv_type" value="both"/>
	</descriptor>

	<descriptor title="Thumbnail Image" name="url_thumbnail" maxlength="255" type="file" upload_dir="thumbimages1" size="35" search="no" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
	
        <descriptor title="Image 1" name="url_image_1" maxlength="255" type="file" upload_dir="images1" size="35" search="no" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
<!--	
	<descriptor title="Image 2" name="url_image_2" maxlength="255" type="file" upload_dir="images2" size="35" search="no" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>

	<descriptor title="Image 3" name="url_image_3" maxlength="255" type="file" upload_dir="images3" size="35" search="no" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
-->
	<descriptor title="Inventory" name="inventory_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" >
		<builder datatype="BOOL" />
		<choice title="Yes" name="inventory_flag" value="1"/>
		<choice title="No" name="inventory_flag" value="0"/>
	</descriptor>
	
	<descriptor title="Stockable" name="stockable_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" >
		<builder datatype="BOOL" />
		<choice title="Yes" name="stockable_flag" value="1"/>
		<choice title="No" name="stockable_flag" value="0"/>
	</descriptor>
	
	<descriptor title="Purchaseable" name="purchaseable_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" >
		<builder datatype="BOOL" />
		<choice title="Yes" name="purchaseable_flag" value="1"/>
		<choice title="No" name="purchaseable_flag" value="0"/>
	</descriptor>
<!--	
	<descriptor title="Quantity" name="quantity" type="text" search="yes" edit="yes" >
		<builder datatype="float" datasize="11"/>
	</descriptor>
-->
	<descriptor title="Min Qty" name="min_qty" type="text" search="yes" edit="yes" >
		<builder datatype="float" datasize="11"/>
	</descriptor>
	<descriptor title="Max Qty" name="max_qty" type="text" search="yes" edit="yes" >
		<builder datatype="float" datasize="11"/>
	</descriptor>
	<descriptor title="Min Order" name="min_order" type="text" search="yes" edit="yes" >
		<builder datatype="float" datasize="11"/>
	</descriptor>
	<descriptor title="Max Order" name="max_order" type="text" search="yes" edit="yes" >
		<builder datatype="float" datasize="11"/>
	</descriptor>
<!--
	<descriptor title="Point" name="point" type="text" search="yes" edit="yes" >
		<builder datatype="float" datasize="11"/>
	</descriptor>

	<descriptor title="Rabat" name="rabat" type="text" search="yes" edit="yes" >
		<builder datatype="float" datasize="11"/>
	</descriptor>
-->
	<descriptor title="Price" name="price" type="text" search="yes" edit="yes" required="yes" >
		<builder datatype="float" datasize="11"/>
	</descriptor>

	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" >
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
		
</contentmanager>

<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="wizards" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Wizard Name" search="yes" edit="yes" name="wiz_name" type="text" size="28" maxlength="50">
		<builder datatype="varchar" datasize="50"/>
	</descriptor>
	
	<descriptor title="Wizard Description" search="yes" edit="yes" name="wiz_description" type="textarea" cols="25" rows="5" >
		<builder datatype="varchar" datasize="128"/>
	</descriptor>
	
	<descriptor title="Wizard Folder" search="yes" edit="yes" name="wiz_folder" type="text" size="28" maxlength="128" comment="pathname ex: product/transaction">
		<builder datatype="varchar" datasize="128"/>
	</descriptor>
	
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="put help here">
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
</contentmanager>

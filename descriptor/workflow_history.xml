<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="workflow_history" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Descriptor Table" name="descriptor_table_name" type="list" search="yes" edit="yes" references="yes" >
		<builder datatype="varchar" datasize="128"/>
	</descriptor>
	
	<descriptor title="Descriptor Table ID" name="descriptor_table_id" maxlength="28" type="text" size="28" required="yes" search="yes" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="28"/>
	</descriptor>
	
	<descriptor title="Status" name="wf_action_id" type="list" required="yes" search="yes" edit="yes" references="yes" >
		<builder datatype="varchar" datasize="28"/>
		<references table="workflow_action" key="id" value="description" orderby="description" viewall="yes" />
	</descriptor>
	<descriptor title="Comment" name="comment" type="textarea" cols="45" rows="5" search="no" edit="yes">
		<builder datatype="text"/>
	</descriptor>
	
</contentmanager>

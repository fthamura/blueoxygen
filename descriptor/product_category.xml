<?xml version="1.0"?>

<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="product_category" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Product Category" search="yes" required="yes" edit="yes" name="pcategory_name" type="text" size="25">
		<builder datatype="varchar" datasize="25"/>
	</descriptor>
	
	<descriptor title="Description" search="yes" edit="yes" name="pcategory_desc" type="text" size="35">
		<builder datatype="varchar" datasize="35"/>
	</descriptor>
	
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" >
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
		
</contentmanager>

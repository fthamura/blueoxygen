<?xml version="1.0"?>

<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="press_release_topic" method="post" action="../utility/crvd-engine.jsp">

	<descriptor title="Press Release Id" name="press_release_id" type="list" search="yes" edit="yes" help="put help here" references="yes" >
		<builder datatype="varchar" datasize="28"/>
		<references table="press_release" key="id" value="title" orderby="id" />
	</descriptor>
	
	<descriptor title="Name" search="yes" required="yes" edit="yes" name="name" type="text" size="30">
		<builder datatype="varchar" datasize="30"/>
	</descriptor>
	
	<descriptor title="Description" search="yes" required="yes" edit="yes" name="description" type="text" size="50">
		<builder datatype="varchar" datasize="50"/>
	</descriptor>

	<descriptor title="Publish Flag" name="publish_flag" type="radio" position="multiline" value="1" search="yes" edit="yes">
		<builder datatype="bool" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
	
</contentmanager>

<?xml version="1.0"?>

<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="ads_product" method="post" action="../utility/crvd-engine.jsp">
	<descriptor title="Section" name="section_id" type="list" search="yes" edit="yes" help="put help here" references="yes" >
		<builder datatype="varchar" datasize="28" criteria="not null" default="test"/>
		<references table="section" key="id" value="description" orderby="description" />
	</descriptor> 
	
	<descriptor title="Category" name="category_id" type="list" search="yes" edit="yes" help="put help here" references="yes" >
		<builder datatype="varchar" datasize="28" criteria="not null" default="test"/>
		<references table="category" key="id" value="description" orderby="description" />
	</descriptor>


	<descriptor title="Client ID" search="yes" edit="yes" name="client_id" type="text" size="28" getid="yes" >
		<builder datatype="varchar" datasize="28"/>
	</descriptor>
	
	<descriptor title="Description" search="yes" edit="yes" name="description" type="textarea" cols="25" rows="5" >
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
	
	<descriptor title="Product URL" search="yes" edit="yes" name="product_url" type="text" size="25" >
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
	
	<descriptor title="Image" search="yes" edit="yes" name="url_image" type="file" default="/images" size="25" >
		<builder datatype="VARCHAR" datasize="255"/>
	</descriptor>
	
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="put help here">
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
		
</contentmanager>

<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>
<!--
# collection of descriptor (thread of descriptor)
CREATE TABLE module_function(
	id 			INT(11) AUTO_INCREMENT PRIMARY KEY,

	name			VARCHAR(128) NOT NULL,
	description		VARCHAR(255),
	descriptor_id		INT(11),
	iparent			INT(11) DEFAULT 0,
	ref_desc		VARCHAR(255) DEFAULT 'id',
	
	create_by		VARCHAR(15),
	create_date 		TIMESTAMP,
	update_by  		VARCHAR(15),
	update_date		TIMESTAMP
);
-->
<contentmanager name="module_function" method="post" action="../utility/crvd-engine.jsp">

	<descriptor title="Description" required="yes" name="description" type="text" size="25" maxlength="255" help="Make role's name unique!" search="yes" edit="yes">
	</descriptor>
	
	<descriptor title="Thread Number" required="yes" name="iparent" value="0" type="text" size="28" maxlength="28" help="Make role's name unique!" search="yes" edit="yes" getid="yes">
	</descriptor>
	
	<descriptor title="Descriptor" name="descriptor_id" type="list" search="yes" edit="yes" help="put help here" references="yes" >
		<references table="descriptor" key="id" value="description" orderby="description" viewall="yes" />
	</descriptor>

	<descriptor title="Table References" name="ref_desc" type="text" value="id" size="25" maxlength="150" search="yes" multiple="yes" required="yes" edit="yes" help="This references will used for generate tree label in Site Management">
		
	</descriptor> 
	
	<descriptor title="View All" name="viewall_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="put help here">
		<choice title="Yes" name="viewall_flag" value="1"/>
		<choice title="No" name="viewall_flag" value="0"/>
	</descriptor>
	
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="put help here">
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
	
</contentmanager>

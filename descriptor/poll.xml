<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>
<!--      
        Article content.....   
              
	title		VARCHAR(128),
	abstract		TEXT,
	content		TEXT,
	author_id		INTEGER, 
	url_thumbnail1	VARCHAR(255),
	url_image1	VARCHAR(255),
	url_thumbnail2	VARCHAR(255),
	url_image2	VARCHAR(255),
	product_id1	INTEGER,
	product_id2	INTEGER,
	banner_id1	INTEGER,
	banner_id2	INTEGER,

-->
<contentmanager name="poll" method="post" action="../utility/crvd-engine.jsp">
	<descriptor title="Question" name="question" maxlength="50" type="text" size="35" required="yes" search="yes" edit="yes">
		<builder datatype="varchar" datasize="50"/>
	</descriptor>
	
	<descriptor title="Vote 1" name="option1" maxlength="50" type="text" size="35" required="yes" search="yes" edit="yes">
		<builder datatype="varchar" datasize="50"/>
	</descriptor>
	<descriptor title="Vote 2" name="option2" maxlength="50" type="text" size="35" search="yes" edit="yes">
		<builder datatype="varchar" datasize="50"/>
	</descriptor>
	<descriptor title="Vote 3" name="option3" maxlength="50" type="text" size="35" search="yes" edit="yes">
		<builder datatype="varchar" datasize="50"/>
	</descriptor>
	<descriptor title="Vote 4" name="option4" maxlength="50" type="text" size="35" search="yes" edit="yes">
		<builder datatype="varchar" datasize="50"/>
	</descriptor>
	<descriptor title="Vote 5" name="option5" maxlength="50" type="text" size="35" search="yes" edit="yes">
		<builder datatype="varchar" datasize="50"/>
	</descriptor>
	<descriptor title="Vote 6" name="option6" maxlength="50" type="text" size="35" search="yes" edit="yes">
		<builder datatype="varchar" datasize="50"/>
	</descriptor>
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="put help here">
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
</contentmanager>

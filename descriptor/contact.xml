<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>
<contentmanager name="contact" method="post" action="../utility/crvd-engine.jsp">
	<descriptor title="Name" name="name" maxlength="55" type="text" size="25" required="yes" search="yes" edit="yes">
		<builder datatype="varchar" datasize="55" unique="yes"/>
	</descriptor>

	<descriptor title="Email" name="email" maxlength="255" type="text" size="25" required="yes" search="yes" edit="yes">
		<builder datatype="varchar" datasize="255" unique="yes"/>
	</descriptor>

	<descriptor title="Comment" name="comment" maxlength="255" type="textarea" cols="35" rows="5" edit="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>

	<descriptor title="Type" name="contact_type_id" maxlength="28" type="list" edit="yes" references="yes">
		<builder datatype="varchar" datasize="28"/>
		<references table="contact_type" key="id" value="description" orderby="description" viewall="yes"/>
	</descriptor>


</contentmanager>

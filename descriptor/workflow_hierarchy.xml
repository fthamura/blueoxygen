<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>
<!--
CREATE TABLE workflow_state_point(
	id 		INT(11) AUTO_INCREMENT PRIMARY KEY,
	name		VARCHAR(50) NOT NULL, 
	description	VARCHAR(125),
	create_by	VARCHAR(15),
	create_date 	TIMESTAMP,
	update_by  	VARCHAR(15),
	update_date	TIMESTAMP,
		active_flag	BOOL	DEFAULT '0'
);
-->
<contentmanager name="workflow_hierarchy" method="post" action="../utility/crvd-engine.jsp">

	<descriptor title="WF Parent" name="iparentcode" type="text" size="28" maxlength="28" search="yes" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="28"/>
	</descriptor>
	
	<descriptor title="Role" name="role_id" type="list" search="yes" edit="yes" references="yes" >
		<builder datatype="varchar" datasize="28"/>
		<references table="workflow_role" key="id" value="name" orderby="name" viewall="yes" />
	</descriptor>
	
	<descriptor title="OSML" name="osml_id" type="list" search="yes" edit="yes" help="Organization Structure" references="yes" >
		<references table="osml" key="id" value="name" orderby="name" viewall="yes" />
	</descriptor>
	
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="put help here">
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>

</contentmanager>

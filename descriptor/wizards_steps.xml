<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="wizards_steps" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Wizard ID" search="yes" edit="yes" name="wizard_id" type="text" size="28" getid="yes" maxlength="28">
		<builder datatype="varchar" datasize="28"/>
	</descriptor>
	
	<descriptor title="Number" search="yes" edit="yes" name="number" type="text" size="28">
		<builder datatype="int"/>
	</descriptor>
	
	<descriptor title="Name" search="yes" edit="yes" name="name" type="text" size="28" maxlength="50">
		<builder datatype="varchar" datasize="50"/>
	</descriptor>
	
	<descriptor title="Title" help="this will be put in the Section Title" edit="yes" name="title" type="text" size="28" maxlength="255">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
	
	<descriptor title="Description" edit="yes" name="description" type="textarea" cols="25" rows="5" maxlength="255">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
	
	<!-- this folder will be located insize wizard folder, and the file for execute this file is:
		folder_name -> main file
		folder_name_action -> action of this main file
		folder_name_form -> script, can be form, or scriptlet etc.
	-->
	<descriptor title="Folder" help="Location: inside wizard folder" edit="yes" name="file" type="text" size="28" maxlength="255">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
	
	
	<descriptor title="Information" edit="yes" name="information" type="text" size="38" maxlength="255">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
	<descriptor title="Information ALT" edit="yes" name="information_alt" type="text" size="38" maxlength="255">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>
	
	<descriptor title="Information Description" edit="yes" name="main" type="textarea" cols="45" rows="8" >
		<builder datatype="text" />
	</descriptor>
	
	<descriptor title="Predecessor ID" edit="yes" name="iparent_id" type="text" size="28" getid="yes" value="0" help="Put the ID of Predecessor step to activate that the predecessor step must be executed">
		<builder datatype="varchar" datasize="28"/>
	</descriptor>
	<descriptor title="Private" name="private_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="Anonymous/Not Logged In user cannot access it">
		<builder datatype="BOOL" />
		<choice title="Yes" name="private_flag" value="1" />
		<choice title="No" name="private_flag" value="0"/>
	</descriptor>
	
	<descriptor title="Show Steps" name="show_steps_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="put help here">
		<builder datatype="BOOL" />
		<choice title="Yes" name="show_steps_flag" value="1"/>
		<choice title="No" name="show_steps_flag" value="0"/>
	</descriptor>
	
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="put help here">
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
</contentmanager>

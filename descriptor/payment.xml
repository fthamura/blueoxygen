<?xml version="1.0"?>

<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="payment" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Payment Method Id"  name="payment_method_id" search="yes" required="yes" edit="yes" type="list">
		<builder datatype="varchar" datasize="30"/>
		<references table="payment_method" key="id" value="pmethod_type" orderby="id" viewall="yes"/>
	</descriptor>
	
	<descriptor title="Bank Name" search="yes" required="yes" edit="yes" name="bank_name" type="text" size="35">
		<builder datatype="varchar" datasize="35"/>
	</descriptor>
	
	<descriptor title="Bank Account" search="yes" required="yes" edit="yes" name="bank_account" type="text" size="30">
		<builder datatype="varchar" datasize="30"/>
	</descriptor>
	
	<descriptor title="Credit Card Number" search="yes" required="yes" edit="yes" name="credit_card_number" type="text" size="30">
		<builder datatype="varchar" datasize="30"/>
	</descriptor>

	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" >
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
		
</contentmanager>

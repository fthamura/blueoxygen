<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>
<!--

CREATE TABLE descriptor(
	id 		INT(11) AUTO_INCREMENT PRIMARY KEY,
	create_by		VARCHAR(15),
	create_date 	TIMESTAMP,
	update_by  	VARCHAR(15),
	update_date	TIMESTAMP,
	name		VARCHAR(128) NOT NULL,
	description	VARCHAR(255),
	url_descriptor	VARCHAR(255),
	descriptor_flag	BOOL DEFAULT 0,
	active_flag	BOOL DEFAULT 1
);

-->
<contentmanager name="descriptor" method="post" action="../utility/crvd-engine.jsp">
	<descriptor title="Name" comment="value must be equal with descriptor's contentmanager/name" required="yes" name="name" type="text" size="25" maxlength="128" help="Descriptor name must be same with your database's table name (and lower case)!" search="yes" edit="yes">
		<builder datatype="VARCHAR" datasize="128"/>
	</descriptor>
	
	<descriptor title="Description" name="description" required="yes" type="text" size="35" maxlength="255" search="yes" edit="yes">
		<builder datatype="VARCHAR" datasize="255"/>
	</descriptor>
	
	<descriptor title="XML Descriptor " name="url_descriptor" maxlength="255" type="file" size="35" search="yes" edit="yes" help="Your content descriptor file">
		<builder datatype="VARCHAR" datasize="255"/>
	</descriptor>
	
	<descriptor title="URL Action" name="url_action" maxlength="255" type="text" size="35" search="yes" edit="yes" help="Your URL Action">
		<builder datatype="VARCHAR" datasize="255"/>
	</descriptor>
	
	<descriptor title="Collection Default" name="collection_default" type="text" size="28" maxlength="128" help="Default Field for Collection" search="yes" edit="yes" comment="Please, fill out with field name!">
		<builder datatype="varchar" datasize="28"/>
	</descriptor>

	
	<descriptor title="Type" name="type_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" help="Choose Yes to activate the Action">
		<builder datatype="VARCHAR" datasize="1"/>
		<choice title="WebWork MVC" name="type_flag" value="2"/>
		<choice title="Action" name="type_flag" value="1"/>
		<choice title="CDML" name="type_flag" value="0" default="yes"/>
	</descriptor>

	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" help="put help here" comment="Non-Active means hide" edit="yes" >
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
	
</contentmanager>

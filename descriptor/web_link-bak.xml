<contentmanager name="web_link" method="post" action="../utility/crvd-engine.jsp">
	<descriptor title="Category" name="category_id" type="list" search="yes" edit="yes" help="put help here" references="yes" >
		<builder datatype="varchar" datasize="28" criteria="not null" default="test"/>
		<references table="category" key="id" value="description" orderby="description" />
	</descriptor>  

	<descriptor title="Title" name="name" maxlength="128" type="text" size="35" required="yes" search="yes" edit="yes">
		<builder datatype="varchar" datasize="128"/>
	</descriptor>

	<descriptor title="Page URL" name="page_url" maxlength="128" type="text" size="25" search="yes" edit="yes">
		<builder datatype="varchar" datasize="128"/>
	</descriptor>
	
	<descriptor title="Description" name="description" maxlength="255" type="textarea" cols="35" rows="5" edit="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>


</contentmanager>

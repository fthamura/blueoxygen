<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>
<contentmanager name="contact_us" method="post" action="../utility/crvd-engine.jsp">

	<descriptor title="First Name" name="first_name" maxlength="35" type="text" size="25" required="yes" search="yes" edit="yes">
		<builder datatype="varchar" datasize="35"/>
	</descriptor>

	<descriptor title="Last Name" name="last_name" maxlength="15" type="text" size="15" search="yes" edit="yes">
		<builder datatype="varchar" datasize="35"/>
	</descriptor>

	<descriptor title="Street Address" name="street_address" maxlength="55" type="text" size="35" edit="yes">
		<builder datatype="varchar" datasize="55"/>
	</descriptor>

	<descriptor title="City" name="city" maxlength="15" type="text" size="15" edit="yes">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>

	<descriptor title="Zip Code" name="zip_code" maxlength="10" type="text" size="10"  search="yes" edit="yes">
		<builder datatype="varchar" datasize="10"/>
	</descriptor>

	<descriptor title="State" name="state" maxlength="35" type="text" size="35"  search="yes" edit="yes" >
		<builder datatype="varchar" datasize="35" />
	</descriptor>

	<descriptor title="Email" name="email" maxlength="125" type="text" size="25" search="yes" edit="yes">
		<builder datatype="varchar" datasize="125"/>
	</descriptor>

	<descriptor title="Phone Number" name="phone_no" maxlength="35" type="text" size="35"  search="yes" edit="yes" >
		<builder datatype="varchar" datasize="35" />
	</descriptor>

	<descriptor title="Comment" name="comment" type="textarea" cols="45" rows="5" search="no" edit="yes">
		<builder datatype="text"/>
	</descriptor>

</contentmanager>

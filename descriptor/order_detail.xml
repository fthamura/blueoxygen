<?xml version="1.0"?>

<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="order_detail" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Order Id" search="yes" required="yes" edit="yes" name="order_id" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>
	
	<descriptor title="Product Id" search="yes" required="yes" edit="yes" name="product_id" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>
	
	<descriptor title="Price" search="yes" required="yes" edit="yes" name="price" type="text" size="15">
		<builder datatype="varchar" datasize="15"/>
	</descriptor>
	
	<descriptor title="Quantity" search="yes" required="yes" edit="yes" name="qty" type="text" size="5">
		<builder datatype="varchar" datasize="5"/>
	</descriptor>
	
	<descriptor title="Active" name="active_flag" type="radio" position="multiline" value="1" search="yes" edit="yes" >
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>
		
</contentmanager>

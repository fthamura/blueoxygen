<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="site" method="post" action="../utility/crvd-engine.jsp">
	
	<descriptor title="Name" name="name" type="text" required="yes" size="15" maxlength="64" search="yes" edit="yes" help="Site Name">
		<builder datatype="VARCHAR" datasize="64"/>
	</descriptor>

	<descriptor title="Description" name="description"  type="text" size="35" maxlength="255" search="yes" edit="yes">
		<builder datatype="VARCHAR" datasize="255"/>
	</descriptor>
	
	<descriptor title="Theme ID"  required="yes" name="theme_id" type="text" size="28" maxlength="28"  search="yes" edit="yes" getid="yes">
		<builder datatype="VARCHAR" datasize="28"/>
	</descriptor>
	
	<descriptor title="Active" name="active_flag" required="yes" type="radio" position="multiline" value="1" search="yes" edit="yes">
		<builder datatype="BOOL" />
		<choice title="Yes" name="active_flag" value="1"/>
		<choice title="No" name="active_flag" value="0"/>
	</descriptor>

</contentmanager>

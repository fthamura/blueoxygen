<?xml version="1.0"?>
<?xml-stylesheet href="/xsl/descriptor.xsp.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<contentmanager name="template_object_detail" method="post" action="../utility/crvd-engine.jsp">
	<descriptor title="Template Object ID" name="template_object_id" type="list" search="yes" edit="yes" references="yes" >
		<builder datatype="varchar" datasize="28"/>
		<references table="template_object" key="id" value="description" orderby="description" viewall="yes"/>
	</descriptor>
	<descriptor title="Collection" name="collection_id" type="text" size="35" maxlength="125" search="yes" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="28"/>
	</descriptor>
	
	<descriptor title="Descriptor" name="descriptor_id" type="text" size="35" maxlength="125" search="yes" edit="yes" getid="yes">
		<builder datatype="varchar" datasize="28"/>
	</descriptor>
	
	<descriptor title="Type" name="type_id" type="radio" position="multiline" value="1" search="yes" edit="yes" help="Template Object can be Descriptor or Collection">
		<choice title="Descriptor" name="type_id" value="1"/>
		<choice title="Collection" name="type_id" value="0"/>
	</descriptor>	
	
	<descriptor title="Description" name="description" maxlength="255" type="text" size="25" search="yes" edit="yes">
		<builder datatype="varchar" datasize="255"/>
	</descriptor>


</contentmanager>
